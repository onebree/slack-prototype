scss:
  #message-form {
    padding-bottom: 15px;
  }

  textarea#message_body {
    line-height: 1.15em;
    resize: none;
  }

#message-form
  = form_for [@room, @message], :remote => true do |f|
    .input-group
      span.input-group-addon.btn.btn-default(
        type="button"
        data-toggle="modal"
        data-target="#uploadFile"
        id="upload_btn"
      )= fa_icon("paperclip lg fw")
      span.input-group-addon.btn.btn-default= fa_icon("smile-o lg fw")
      = f.text_area :body, :rows => 2, :autocomplete => false, :class => "form-control"

= render :partial => "messages/upload_file"

javascript:
  $("#upload_btn").on("click", function() {
    var body = $("#message_body").val();
    $("#message_attachment_body").val(body);
  });
