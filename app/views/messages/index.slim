scss:
  .sidebar {
    padding-top: 15px;
  }

.row
  .col-md-2
    .sidebar
      .panel.panel-default
        .panel-heading Rooms
        ul.list-group
          - Room.pluck(:name).each do |room|
            li.list-group-item= room

      .panel.panel-default
        .panel-heading Users
        ul.list-group
          - User.pluck(:username).each do |user|
            li.list-group-item= user

  .col-md-10 style="border-left: 2px solid #eee;"
    = render "messages"
    = render "message_form"
